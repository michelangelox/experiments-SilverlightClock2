<UserControl x:Class="Silverlight_Clock_2.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="320" BorderThickness="2" BorderBrush="Black">
    
	<Grid x:Name="LayoutRoot" Background="Transparent"  Width="400" Height="320" >

		<StackPanel x:Name="StackRoot">
			<Canvas x:Name="canvasSeconds" />				
			<Canvas x:Name="canvasMinutes" />
			<Canvas x:Name="canvasHours" />
			<Canvas x:Name="canvasDayNames" />
			<Canvas x:Name="canvasDays"	/>			
			<Canvas x:Name="canvasMonths" />
			<Canvas x:Name="canvasYears" />

			<TextBlock x:Name="currentTime" Height="20" TextAlignment="Center" />
		</StackPanel>
		<Border BorderBrush="#000000" BorderThickness="2,2,2,2" Width="400" Height="320" CornerRadius="0, 0, 15, 15"/>
	</Grid>

</UserControl>
